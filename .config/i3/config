#exec --no-startup-id nm-applet

# set the output when connected to HDMI
#exec xrandr --output HDMI-1 --mode 1920x1200 --pos 0x0 --rotate normal --output eDP-1 --primary --mode 1366x768 --pos 1920x0 --rotate normal

exec ~/.screenlayout/dock.sh

# set the wallpaper and colour scheme using wal
exec wal -i "/home/user/Pictures/wallpaper/wg/1507035009284.jpg"

# start notification daemon (testing)
exec dunst
bindsym $mod+Control+s exec notify-send "test please ignore"

# remap caps lock to escape
exec setxkbmap -option caps:swapescape

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# disable focus following the mouse
focus_follows_mouse no

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run

# volume control
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +1% && pactl set-sink-mute 0 0
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -1% && pactl set-sink-mute 0 0
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle

# brightness control
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86MonBrightnessUp exec xbacklight -inc 10

# hide borders adjacent to screen
hide_edge_borders both

# hide title bars
new_window none
# new_float normal

# hide title bars for URxvt
# for_window [class="URxvt"] border pixel 1

# default gaps config
gaps inner 10
gaps outer 3
# smart_gaps on

# testing for i3-nagbar (testing)
# bindsym $mod+l exec "i3-nagbar -t warning -m 'Edit system files' -b 'config' 'exec mousepad ~/.i3/config' -b 'i3status' 'exec mousepad ~/.i3/config'"


# mode to handle system shutdown, reboot, logout, suspend
set $mode_system System: (l) lock | (e) logout | (s) suspend | (+ r) reboot | (+ x) shutdown

bindsym $mod+Escape mode "$mode_system"

mode "$mode_system" {
        bindsym l       mode "default"; exec i3lock -c 000000
        bindsym e       exit
		bindsym s		mode "default"; exec systemctl suspend
        bindsym Shift+r exec shutdown --reboot now
        bindsym Shift+x exec shutdown --poweroff now
        bindsym Escape  mode "default"
}

# mode to change gaps
set $mode_gaps Gaps: (o) outer | (i) inner
set $mode_gaps_outer Outer gaps: (+) inc | (-) dec | (0) zero | (i) inner
set $mode_gaps_inner Inner gaps: (+) inc | (-) dec | (0) zero | (o) outer
bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
        bindsym o      mode "$mode_gaps_outer"
        bindsym i      mode "$mode_gaps_inner"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
        bindsym plus  gaps inner current plus 5
        bindsym minus gaps inner current minus 5
        bindsym 0     gaps inner current set 0

        bindsym Shift+plus  gaps inner all plus 5
        bindsym Shift+minus gaps inner all minus 5
        bindsym Shift+0     gaps inner all set 0

        bindsym o      mode "$mode_gaps_outer"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode "$mode_gaps_outer" {
        bindsym plus  gaps outer current plus 5
        bindsym minus gaps outer current minus 5
        bindsym 0     gaps outer current set 0

        bindsym Shift+plus  gaps outer all plus 5
        bindsym Shift+minus gaps outer all minus 5
        bindsym Shift+0     gaps outer all set 0

        bindsym i      mode "$mode_gaps_inner"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# mode to change keyboard layout
set $mode_keyboard Keyboard: (1) qwerty | (2) colemak | (3) caps:swapescape | (4) reset

bindsym $mod+Control+k mode "$mode_keyboard"

mode "$mode_keyboard" {
	bindsym 1      exec setxkbmap us                      #; mode "$mode_keyboard"
	bindsym 2      exec setxkbmap -variant colemak        #; mode "$mode_keyboard"
	bindsym 3      exec setxkbmap -option caps:swapescape #; mode "$mode_keyboard"
	bindsym 4      exec setxkbmap -option ''              #; mode "$mode_keyboard"
	bindsym Escape mode "default"
}

